    "version": "0.2.0",
    "configurations": [
        {
            "type": "java",
                "name": "App",
                "request": "launch",
            "linux": {
                "vmArgs": "--module-path lib/linux --add-modules=javafx.controls,javafx.fxml",
            },
            "windows": {
                "vmArgs": "--module-path lib/win --add-modules=javafx.controls,javafx.fxml -Djava.library.path=lib/win/bin",
            },
            "mainClass": "app.App"
        }
    ]
}